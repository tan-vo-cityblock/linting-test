[flake8]
max-line-length = 80
select = B,C,E,F,W,T4,B9
# E203: whitespace before ':', conflicts with Black/PEP8
# W503: line break before binary operator, conflicts with Black/PEP8
# E501: line too long. Using flake8-bugbear plugin to enforce
# line length which is 80 + 10% buffer.
# See https://github.com/psf/black/blob/master/docs/the_black_code_style.md#line-length for more details
extend-ignore = E203, W503, E501
