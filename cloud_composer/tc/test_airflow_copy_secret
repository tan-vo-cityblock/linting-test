if [[ $# -lt 1 ]]; then
   echo "Please specify a secret name!"
   exit 1
fi

SECRET_NAME=$1
FROM_CLUSTER=gke_cityblock-orchestration_us-east4-a_us-east4-prod-airflow-d4e023bb-gke
TO_CLUSTER=gke_cityblock-orchestration_us-east4-a_us-east4-cityblock-composer-cdc9ecc8-gke

kubectl get secret $SECRET_NAME --context $FROM_CLUSTER -o yaml | kubectl apply --context $TO_CLUSTER -f -
